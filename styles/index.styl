#video-background
  position: absolute;
  bottom: 0px; 
  right: 0px; 
  min-width: 100%; 
  min-height: 100%; 
  width: auto; 
  height: auto; 
  z-index: -1; 
  overflow: hidden

.cascade
  width 100vw
  min-height 100vh
  position relative
  transform translateZ(0)
  overflow hidden
  
.cascade__header
  background-size cover

.cascade__header__title
  @extends h1
  position absolute
  top 50%
  left 50%
  transform translateX(-50%) translateY(-50%)
  color #fff
  text-align center

.cascade__header--about
  background lighter
  background-image url("/img/about.jpg")
  z-index 1

.cascade__content
  background #fff
  
.cascade__content__wrapper
  width 80%
  max-width 1200px
  margin 0 auto
  padding 10% 0

.tools
  padding-top 1em

.tools__half-column
  width 50%
  float left
  h3
    color highlight
  ul
    list-style none
    padding 0
    
.cascade__content--about
  z-index 2

.cascade__content--about__portrait
  display block
  float right
  width 30%

.cascade__content--about__bio
  float left
  width 55%
  padding-top 1em
  ul
    font-weight 300

@media (max-width: 960px)
  .cascade__content--about__portrait
    float none
    width 60%
    margin 0 auto
  .cascade__content--about__bio
    float none
    width 80%
    margin 0 auto
    h3
      text-align center
    p
    text-align justify
    ul
      text-align center
    

.cascade__header--portfolio
  background medium
  background-image url("/img/portfolio.jpg")
  z-index 5

.cascade__content--portfolio
  z-index 6
  
.logo
  position absolute
  top 50%
  left 50%
  transform translateX(-50%) translateY(-50%)
  text-align center
  width 100%
  p
    font-size 3rem
    text-transform uppercase
    font-weight 300
  
.last-letter
  letter-spacing normal

.cascade__header--contact
  background medium
  background-image url("/img/contact.jpg")
  z-index 7

.cascade__content--contact
  z-index 8
  .cascade__content__wrapper
    text-align center
    & > p
      text-align center
      font-style italic
    
.contact-card
  display inline-block
  margin 2em 2em
  position relative
  width 150px
  height 100px
  perspective 500px
  &:hover .flippy-card
    transform rotateX(180deg) scale(1.5)
  
.flippy-card
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  transform-style preserve-3d
  transition transform 0.5s ease-in-out
  p
    font-family 'Bebas Neue'
    color highlight

.flippy-card__front
  position absolute
  top 0
  left 0
  height 100%
  width 100%
  backface-visibility hidden
  text-align center
  font-size 10rem
  line-height 100px
  p
    line-height 100px
    margin 0

.flippy-card__back
  @extend .flippy-card__front
  transform rotateX(180deg)